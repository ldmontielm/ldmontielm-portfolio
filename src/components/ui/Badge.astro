---

const variants = {
    success: "border-transparent bg-green-100 text-green-foreground hover:bg-green/80",
    info: "px-2 py-0.5 w-fit rounded bg-violet-100 text-violet-700 font-semibold text-xs mb-0",
    default: "border bg-white text-primary-foreground"
}

interface Props{
    content: string,
    variant: "success" | "info" | "default"
}

const { content, variant } = Astro.props
---

<div class={`w-fit inline-flex items-center border px-2 py-0.5 text-xs font-medium rounded transition-colors focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2 ${ variant === 'success' ? variants.success : variant === 'info' ? variants.info : variants.default }`}>{content}</div>