---
import ArrowViewProject from '@/components/icons/ArrowViewProject.astro';
import CardExperience from '@/components/system/CardExperience.astro';
import Subtitle from '@/components/ui/Subtitle.astro';

import { works } from '@cv'
---

<section>
    <Subtitle subtitle='Experiences' />
    <div class="my-5">
        {
            works.map((work) => (
                <CardExperience work={work} />
            ))
        }
    </div>
    <div class="w-full flex items-center justify-center mt-5">
        <a href="/curriculum-vitae.pdf" target="_blank" class="w-fit rounded-full px-3 py-2 text-black flex items-center gap-2 hover:bg-[var(--accent-background-400)]">
            <span class="text-sm font-medium">See curriculum vitae</span>
            <ArrowViewProject />
        </a>
    </div>
</section>