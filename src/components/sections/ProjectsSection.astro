---
import { getCollection } from "astro:content"
import CardProject from "@/pages/projects/components/CardProject.astro"
import ArrowViewProject from "@/components/icons/ArrowViewProject.astro"
import Subtitle from "../ui/Subtitle.astro"

const allProjects = await getCollection('projects')
---

<section>
    <Subtitle subtitle="Projects" />
    <div class="mt-5 space-y-2">
        {
            allProjects.map((project) => (
                <CardProject project={project} />
            ))
        }
    </div>
    <div class="w-full flex items-center justify-center mt-5">
        <a href="/projects" class="w-fit rounded-full px-3 py-2 text-black flex items-center gap-2 hover:bg-[var(--accent-background-400)]">
            <span class="text-sm font-medium">See projects</span>
            <ArrowViewProject />
        </a>
    </div>
</section>