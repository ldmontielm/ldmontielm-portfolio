---
import { getCollection } from 'astro:content';
import ArrowViewProject from '@/components/icons/ArrowViewProject.astro';
import CardExperience from './CardExperience.astro';

const allExperiences = await getCollection('experiences')
---

<section class="my-5">
    <div class="space-y-2">
        <h3 class="text-xl font-semibold">Experience</h3>
        <hr>
    </div>
    <div class="my-5">
        {
            allExperiences.map((experience) => (
                <CardExperience experience={experience} />
            ))
        }
    </div>
    <div class="w-full flex items-center justify-center mt-5">
        <a href="/public/resumen.pdf" target="_blank" class="w-fit rounded-full px-3 py-2 text-black flex items-center gap-2 hover:bg-[var(--accent-background-400)]">
            <span class="text-xs font-medium">View full resumen</span>
            <ArrowViewProject />
        </a>
    </div>
</section>